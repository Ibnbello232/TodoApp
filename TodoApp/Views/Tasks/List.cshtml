@{
}

@model List<TodoApp.Models.Entities.Todo>

<h1>All Todos</h1>

<table class=" table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Is Completed</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.IsCompleted</td>
                <td>@todo.CreatedAt</td>

                <a>Edit</a>
            </tr>
        }
    </tbody>
</table>
